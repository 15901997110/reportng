<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
    <title>Unit Test Results</title>
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
    <meta name="description" content="TestNG unit test results." />
    <link href="reportng.css" rel="stylesheet" type="text/css" />
</head>
<body>
<div class="title">$suite.name</div>
<br />
    #foreach( $result in $suite.results )
<table class="summaryTable" width="100%">

   #set ($notPassedTests = $result.testContext.skippedTests.size() + $result.testContext.failedTests.size())
   #set ($totalTests = $result.testContext.passedTests.size() + $notPassedTests)

   <tr class="header">
     <td><a href="suite1_test${velocityCount}_results.html" target="main">$result.testContext.name</a></td>
   #if ($totalTests > 0)
     #set ($passRate = (($totalTests - $notPassedTests) * 100 / $totalTests))
     <td style="text-align: right">$passRate%</td>
   #else
     <td style="text-align: right">N/A</td>
   #end
   </tr>

   <tr class="small">
     <td>Tests Run:</td>
     <td style="text-align: right">$totalTests</td>
   </tr>
   <tr class="small" style="border-bottom: 1px solid #000000">
     <td>Duration:</td>
     <td style="text-align: right">$utils.formatDuration($result.testContext.startDate, $result.testContext.endDate)</td>
   </tr>

   #if ($result.testContext.failedTests.size() > 0)
   <tr class="failed">
   #else
   <tr>
   #end
     <td>Failed:</td>
     <td style="text-align: right"><b>$result.testContext.failedTests.size()</b></td>
   </tr>

   #if ($result.testContext.failedTests.size() == 0 && $result.testContext.skippedTests.size() > 0)
   <tr class="skipped">
   #else
   <tr>
   #end
     <td>Skipped:</td>
     <td style="text-align: right"><b>$result.testContext.skippedTests.size()</b></td>
   </tr>   

   #if ($notPassedTests == 0 && $result.testContext.passedTests.size() > 0)
   <tr class="passed">
   #else
   <tr>
   #end
     <td>Passed:</td>
     <td style="text-align: right"><b>$result.testContext.passedTests.size()</b></td>
   </tr>

</table>
<div>&nbsp;</div>
   #end
</body>
</html>